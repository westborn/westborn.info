{% include "partials/htmlhead.njk" %}

<header>

  <p class="logo"><a href="/"><img src="/images/logo.svg" width="50" height="50" alt="11ty starter" inline>westborn</a></p>

  <button id="themetoggle" title="switch theme"></button>

  <nav>
    {% navlist collections.all | eleventyNavigation, page, 1 %}
  </nav>

</header>

<main>
{% block content %}

  <h1>{{ title }}</h1>

  {{ content | safe }}

  {% include "partials/pagelist.njk" %}

{% endblock %}
</main>

<footer>

  <p class="github">
    <a href="https://github.com/westborn">
      <img src="/images/github.svg" width="30" height="30" alt="11ty starter" inline>github.com/westborn
    </a>
  </p>

  <nav>
    {% navlist collections.all | eleventyNavigation, page, 2 %}
  </nav>

</footer>

