<ol reversed>
{% for article in articleslist | reverse %}
<a href="{{ article.url | url }}">
  <li class="p-5 mb-5 rounded-lg border-2 border-transparent hover:border-gray-400">
    <p class="text-2xl">{% if article.data.title %}{{ article.data.title }}{% else %}<code>{{ article.url }}</code>{% endif %}</p>
    <p class="font-mono"><time datetime="{{ article.date | dateymd }}">{{ article.date | datefriendly }}</time></p>
    <p>
    {% for tag in article.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a class="text-sm p-px rounded-sm hover:bg-gray-700 hover:text-white" href="{{ tagUrl | url }}">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  </li>
</a>
{% endfor %}
</ol>
