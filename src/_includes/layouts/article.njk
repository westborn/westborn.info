---
layout: base
includePrism: true
---

<h1 class="text-4xl font-bold mb-5">{{ title }}</h1>

<article class="prose max-w-none">
{{ content | safe }}
</article>

<hr>

<div>
  {%- set previousArticle = collections.articles | getPreviousCollectionItem(page) %}
  {%- if previousArticle %}<a href="{{ previousArticle.url | url }}">← {{ previousArticle.data.title }}</a>{% endif %}
  {%- set nextArticle = collections.articles | getNextCollectionItem(page) %}
  {%- if nextArticle %}<a href="{{ nextArticle.url | url }}">{{ nextArticle.data.title }} →</a>{% endif %}
</div>